{% extends "UsignoloBundle::layout.html.twig" %}

{% block content %}
    <section>
        <h2>Issue list</h2>

        <table class="records_list">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Title</th>
                    <th>Description</th>
                    <th>Complete</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
            {% for entity in entities %}
                <tr>
                    <td><a href="{{ path('issue_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                    <td>{{ entity.title }}</td>
                    <td>{{ entity.description }}</td>
                    <td>{% if entity.complete %}Yes{% else %}No{% endif %}</td>
                    <td>
                        <ul>
                            <li><a href="{{ path('issue_show', { 'id': entity.id }) }}">show</a></li>
                            <li><a href="{{ path('issue_edit', { 'id': entity.id }) }}">edit</a></li>
                        </ul>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>

        <ul>
            <li><a href="{{ path('issue_new') }}">Create a new entry</a></li>
        </ul>
    </section>
{% endblock %}
