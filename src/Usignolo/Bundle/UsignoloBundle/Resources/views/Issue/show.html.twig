{% extends "UsignoloBundle::layout.html.twig" %}

{% block content %}
    <section>
        <h2>Issue</h2>

        <table class="record_properties">
            <tbody>
                <tr>
                    <th>Id</th>
                    <td>{{ entity.id }}</td>
                </tr>
                <tr>
                    <th>Title</th>
                    <td>{{ entity.title }}</td>
                </tr>
                <tr>
                    <th>Description</th>
                    <td>{{ entity.description }}</td>
                </tr>
            </tbody>
        </table>

        <ul class="record_actions">
            <li><a href="{{ path('issue') }}">Back to the list</a></li>
            <li><a href="{{ path('issue_edit', { 'id': entity.id }) }}">Edit</a></li>
            <li>{{ form(delete_form) }}</li>
        </ul>
    </section>
{% endblock %}
